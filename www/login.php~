	<body>

	<div class="login">
		<h1>Login</h1>
		<?php
			// hard coded login and password
			$hcusr = "test";
			$hcpss = "1234";
			$liusr = $_POST["username"];
			$lipss = $_POST["password"];

			if ($liusr == $hcusr && $lipss == $hcpss){
				echo "<h2>Welcome ". $liusr . "!</h2><br>";
			} else {
				echo "<h2>". $liusr . " is not a current user</h2><br>";
			}
		?>
	</div>
